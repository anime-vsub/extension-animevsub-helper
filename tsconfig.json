{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2016",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "@modyfi/vite-plugin-yaml/modules",
	    "@types/chrome"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}